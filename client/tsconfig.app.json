{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "server/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
