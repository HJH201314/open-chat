{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "open-chat-client",
  "version": "0.1.0",
  "identifier": "cn.fcraft.tue",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://localhost:9035",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build-only"
  },
  "app": {
    "windows": [
      {
        "title": "OpenChat - AI知识学习平台",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
